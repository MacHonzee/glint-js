{
  "name": "glint-js",
  "version": "0.10.0-beta.1",
  "description": "Core NPM framework-kinda server library built upon Express, Mongoose, ajv, passport and various other services with integration and easy deployment to Google Cloud App Engine.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "source": "./src/index.ts"
    },
    "./test-utils": {
      "types": "./dist/test-utils/index.d.ts",
      "import": "./dist/test-utils/index.js",
      "source": "./src/test-utils/index.ts"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js",
      "source": "./src/services/*.ts"
    },
    "./config/*": {
      "types": "./dist/config/*.d.ts",
      "import": "./dist/config/*.js",
      "source": "./src/config/*.ts"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "@google-cloud/storage": "^6.7.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "async-mutex": "^0.4.0",
    "axios": "^1.3.4",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^5.1.0",
    "express-fileupload": "^1.4.0",
    "glint-js": "^0.6.16",
    "google-gax": "^4.3.4",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "lru-cache": "^7.10.2",
    "mongoose": "^8.8.3",
    "ms": "^2.1.3",
    "node-fetch": "^3.2.10",
    "passport-local-mongoose": "^7.1.2",
    "qs": "^6.11.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.12.7",
    "@types/passport-local-mongoose": "^6.1.4",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "cross-env": "^7.0.3",
    "glint-js-kit": "^0.5.0",
    "jest": "^29.7.0",
    "mongodb-memory-server-core": "^10.1.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "analyze": "eslint src test",
    "prettify": "eslint src test --fix",
    "build": "npm run build:clean && npm run build:compile && npm run build:test-utils",
    "build:clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "build:compile": "tsc -p tsconfig.build.json",
    "build:test-utils": "tsc -p tsconfig.test-utils.json",
    "build:dev": "npm run build:clean && tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build:test-utils",
    "scan": "npm audit",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MacHonzee/glint-js.git"
  },
  "keywords": [
    "serverside",
    "webapp",
    "npm",
    "express",
    "mongoose",
    "ajv",
    "jwt",
    "fullstack",
    "framework",
    "google cloud",
    "google app engine"
  ],
  "author": "Jan Rudolf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MacHonzee/glint-js/issues"
  },
  "homepage": "https://github.com/MacHonzee/glint-js#readme",
  "jest": {
    "testEnvironment": "jest-environment-node",
    "preset": "ts-jest/presets/default-esm",
    "testTimeout": 20000,
    "globalSetup": "./src/test-utils/globals/global-setup.js",
    "globalTeardown": "./src/test-utils/globals/global-teardown.js",
    "setupFilesAfterEnv": [
      "./src/test-utils/globals/disconnect-from-db.js"
    ],
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "text",
      "json"
    ]
  }
}